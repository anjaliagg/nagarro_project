<%= form_for [@role.project, @role] do |f| %>
		
 <%= f.label :title %>*:
    <%= f.text_field :title %><br />

 <%= f.label :person_id %>:
    <%= f.collection_select(:person_id, Person.all, :id, :name) %><br />

 <%= f.label :status_id %>:
    <%= f.collection_radio_buttons(:status_id, Status.all, :id, :title) %><br />

 <br><br><%= f.submit %></br></br>

<% end %>